<section class="newsletter-description-container">
  <h1 class="newsletter-title"><%= @newsletter.title %></h1>
  <h3 class="summary-header">The Big Picture</h3>
  <div class="newsletter-description">
    <p>
      <%= markdown(@newsletter.description) %>
    </p>
  </div>
</section>

<section class="email-content-container">
  <table>
    <thead>
      <tr>
        <th class="table-title"><h3>Today's Articles</h3></th>
      </tr>
    </thead>
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td>
          <%= link_to("#{article.title}", article.url, target: "_blank") %>
          </td>
        </tr>
        <tr>
          <td>
            <%= markdown(article.description) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
