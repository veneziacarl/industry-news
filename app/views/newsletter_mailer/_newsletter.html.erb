<table>
  <thead>
    <tr>
      <th><%= Date.today %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <h1>The Big Picture</h1>
      </td>
    </tr>
    <tr>
      <td class="newsletter-description">
        <%= markdown(@newsletter.description) %>
      </td>
    </tr>
    <% @articles.each do |article| %>
      <tr>
        <td>
        <%= link_to("#{article.title}", article.url, target: "_blank") %>
        </td>
      </tr>
      <tr>
        <td>
          <%= markdown(article.description) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
