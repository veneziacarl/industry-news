newsletter show

<br />

<%= form_for(@newsletter) do |f| %>
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :description, 'Description' %>
  <%= f.text_field :description %>
  <br />

  <%= f.collection_check_boxes(:articles_to_send, @newsletter.newsletter_articles.order('id desc'), :id, :article_title) do |b| %>
    <%= b.label { b.check_box + link_to(b.object.article.title, b.object.article.url) } %> <br />
  <% end %>

  <%= f.submit 'Update' %>
<% end %>
